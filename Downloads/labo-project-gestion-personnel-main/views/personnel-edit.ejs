<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier Personnel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/sidebar', { currentPage: 'dashboard' }) %>
    <link href="/css/global.css" rel="stylesheet">

<!-- Après la sidebar -->
<%- include('partials/navbar', { 
    pageTitle: 'Gestion des Formations',
    pageSubtitle: 'Planification et suivi',
    pageIcon: 'mortarboard-fill',
    backUrl: '/rh/dashboard',
    username: username
}) %>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 offset-md-2 px-4 py-4">
                <h2 class="mb-4">Modifier Personnel - <%= personnel.prenom %> <%= personnel.nom %></h2>

                <form method="POST" action="/personnel/update/<%= personnel.id %>">
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Informations Personnelles</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">Matricule</label>
                                    <input type="text" class="form-control" value="<%= personnel.matricule %>" readonly>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Nom <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="nom" value="<%= personnel.nom %>" required>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Prénom <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="prenom" value="<%= personnel.prenom %>" required>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Date de Naissance</label>
                                    <input type="date" class="form-control" name="date_naissance" 
                                           value="<%= personnel.date_naissance ? personnel.date_naissance.toISOString().split('T')[0] : '' %>">
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Email <span class="text-danger">*</span></label>
                                    <input type="email" class="form-control" name="email" value="<%= personnel.email %>" required>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Téléphone</label>
                                    <input type="tel" class="form-control" name="telephone" value="<%= personnel.telephone || '' %>">
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Date d'Embauche</label>
                                    <input type="date" class="form-control" name="date_embauche" 
                                           value="<%= personnel.date_embauche.toISOString().split('T')[0] %>" readonly>
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label">Adresse</label>
                                    <textarea class="form-control" name="adresse" rows="2"><%= personnel.adresse || '' %></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">Informations Professionnelles</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Type de Personnel</label>
                                    <input type="text" class="form-control" value="<%= personnel.type_personnel %>" readonly>
                                    <input type="hidden" name="type_personnel" value="<%= personnel.type_personnel %>">
                                </div>

                                <% if (personnel.type_personnel === 'Biologiste' && specificData) { %>
                                <div class="col-md-6">
                                    <label class="form-label">Spécialité Principale</label>
                                    <select class="form-select" name="specialite">
                                        <option value="Biologie délocalisée" <%= specificData.specialite === 'Biologie délocalisée' ? 'selected' : '' %>>Biologie délocalisée</option>
                                        <option value="Biochimie" <%= specificData.specialite === 'Biochimie' ? 'selected' : '' %>>Biochimie</option>
                                        <option value="Hématologie Hémostase" <%= specificData.specialite === 'Hématologie Hémostase' ? 'selected' : '' %>>Hématologie Hémostase</option>
                                        <option value="Microbiologie" <%= specificData.specialite === 'Microbiologie' ? 'selected' : '' %>>Microbiologie</option>
                                        <option value="Immuno-Séro-Electro" <%= specificData.specialite === 'Immuno-Séro-Electro' ? 'selected' : '' %>>Immuno-Séro-Electro</option>
                                        <option value="Immuno-Hémato" <%= specificData.specialite === 'Immuno-Hémato' ? 'selected' : '' %>>Immuno-Hémato</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Responsabilités</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="responsable_assurance_qualite" 
                                               id="raq" <%= specificData.responsable_assurance_qualite ? 'checked' : '' %>>
                                        <label class="form-check-label" for="raq">
                                            Responsable Assurance Qualité
                                        </label>
                                    </div>
                                </div>
                                <% } %>

                                <% if (personnel.type_personnel === 'Technicien' && specificData) { %>
                                <div class="col-md-6">
                                    <label class="form-label">Département</label>
                                    <select class="form-select" name="departement">
                                        <option value="Biochimie" <%= specificData.departement === 'Biochimie' ? 'selected' : '' %>>Biochimie</option>
                                        <option value="Hématologie" <%= specificData.departement === 'Hématologie' ? 'selected' : '' %>>Hématologie</option>
                                        <option value="Microbiologie" <%= specificData.departement === 'Microbiologie' ? 'selected' : '' %>>Microbiologie</option>
                                        <option value="Biologie délocalisée" <%= specificData.departement === 'Biologie délocalisée' ? 'selected' : '' %>>Biologie délocalisée</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check mt-4">
                                        <input class="form-check-input" type="checkbox" name="poste_nuit" 
                                               id="gardeNuit" <%= specificData.poste_nuit ? 'checked' : '' %>>
                                        <label class="form-check-label" for="gardeNuit">
                                            Affecté Garde de Nuit
                                        </label>
                                    </div>
                                </div>
                                <% } %>

                                <% if (personnel.type_personnel === 'Cadre' && specificData) { %>
                                <div class="col-md-6">
                                    <label class="form-label">Poste</label>
                                    <input type="text" class="form-control" name="poste" value="<%= specificData.poste || '' %>">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Département Rattaché</label>
                                    <input type="text" class="form-control" name="departement_cadre" value="<%= specificData.departement || '' %>">
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-4 border-warning">
                        <div class="card-header bg-warning">
                            <h5 class="mb-0">Informations Système</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <p><strong>Date de création:</strong> <%= personnel.created_at.toLocaleString('fr-FR') %></p>
                                </div>
                                <div class="col-md-4">
                                    <p><strong>Dernière modification:</strong> <%= personnel.updated_at.toLocaleString('fr-FR') %></p>
                                </div>
                                <div class="col-md-4">
                                    <p><strong>Statut:</strong> 
                                        <span class="badge <%= personnel.statut === 'Actif' ? 'bg-success' : 'bg-secondary' %>">
                                            <%= personnel.statut %>
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-2"></i> Enregistrer les modifications
                        </button>
                        <a href="/personnel/list" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i> Annuler
                        </a>
                        <button type="button" class="btn btn-danger ms-auto" onclick="deletePersonnel()">
                            <i class="bi bi-trash me-2"></i> Supprimer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function deletePersonnel() {
            if(confirm('Êtes-vous sûr de vouloir supprimer ce personnel? Cette action est irréversible.')) {
                fetch('/personnel/delete/<%= personnel.id %>', { method: 'DELETE' })
                    .then(response => response.json())
                    .then(data => {
                        alert('Personnel supprimé avec succès');
                        window.location.href = '/personnel/list';
                    })
                    .catch(error => {
                        alert('Erreur lors de la suppression');
                    });
            }
        }
    </script>
</body>
</html>