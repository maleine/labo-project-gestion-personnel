<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Habilitations</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <style>
        :root {
            --sidebar-width: 250px;
        }
        
        .main-content {
            margin-left: var(--sidebar-width);
            padding: 30px;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        .stats-card {
            border-left: 4px solid #0d6efd;
            transition: transform 0.2s;
        }

        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .badge-expiration {
            font-size: 0.85rem;
            padding: 0.4rem 0.6rem;
        }

        .alert-habilitations {
            border-left: 4px solid #ffc107;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f3f5;
        }

        .action-buttons .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }

        .modal-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .search-box {
            max-width: 300px;
        }
    </style>
</head>
<body>
    <%- include('../partials/sidebar', { currentPage: 'habilitations' }) %>
    <link href="/css/global.css" rel="stylesheet">

<!-- Après la sidebar -->
<%- include('../partials/navbar', { 
    pageTitle: 'Gestion des Formations',
    pageSubtitle: 'Planification et suivi',
    pageIcon: 'mortarboard-fill',
    backUrl: '/rh/dashboard',
    username: username
}) %>
    <div class="main-content">
        <div class="container-fluid px-4 py-4">
            
            <!-- En-tête -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-award text-primary"></i> 
                        Gestion des Habilitations
                    </h2>
                    <p class="text-muted mb-0">Suivi et gestion des habilitations du personnel</p>
                </div>
                <a href="/rh/habilitations/add" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i> Nouvelle Habilitation
                </a>
            </div>

            <!-- Messages de succès/erreur -->
            <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i> <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>
            
            <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i> <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>

            <!-- Statistiques -->
            <div class="row g-3 mb-4">
                <div class="col-md-3">
                    <div class="card stats-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">Total Habilitations</h6>
                                    <h3 class="mb-0"><%= habilitations.length %></h3>
                                </div>
                                <div class="text-primary fs-1">
                                    <i class="bi bi-award"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="card stats-card" style="border-left-color: #28a745;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">Actives</h6>
                                    <h3 class="mb-0">
                                        <%= habilitations.filter(h => h.statut === 'Active' && (!h.jours_restants || h.jours_restants >= 0)).length %>
                                    </h3>
                                </div>
                                <div class="text-success fs-1">
                                    <i class="bi bi-check-circle"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="card stats-card" style="border-left-color: #ffc107;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">À Renouveler</h6>
                                    <h3 class="mb-0"><%= aRenouveler.length %></h3>
                                </div>
                                <div class="text-warning fs-1">
                                    <i class="bi bi-exclamation-triangle"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="card stats-card" style="border-left-color: #dc3545;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">Expirées</h6>
                                    <h3 class="mb-0">
                                        <%= habilitations.filter(h => h.jours_restants !== null && h.jours_restants < 0).length %>
                                    </h3>
                                </div>
                                <div class="text-danger fs-1">
                                    <i class="bi bi-x-circle"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Alertes Habilitations à renouveler -->
            <% if (aRenouveler.length > 0) { %>
            <div class="alert alert-warning alert-habilitations alert-dismissible fade show" role="alert">
                <h5 class="alert-heading">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    Habilitations à renouveler prochainement
                </h5>
                <p class="mb-2">
                    <strong><%= aRenouveler.length %></strong> habilitation(s) expirent dans les 90 prochains jours :
                </p>
                <ul class="mb-0">
                    <% aRenouveler.slice(0, 5).forEach(hab => { %>
                    <li>
                        <strong><%= hab.personnel_nom %></strong> - 
                        <%= hab.type_habilitation %> 
                        <span class="badge bg-danger ms-2">
                            <%= hab.jours_restants > 0 ? 'Expire dans ' + hab.jours_restants + ' jours' : 'EXPIRÉE' %>
                        </span>
                    </li>
                    <% }); %>
                    <% if (aRenouveler.length > 5) { %>
                    <li class="text-muted">... et <%= aRenouveler.length - 5 %> autre(s)</li>
                    <% } %>
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>

            <!-- Tableau des habilitations -->
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-list-ul me-2"></i>
                            Liste des Habilitations
                        </h5>
                        <div class="search-box">
                            <input type="text" 
                                   id="searchInput" 
                                   class="form-control" 
                                   placeholder="Rechercher...">
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="habilitationsTable" class="table table-hover table-striped align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Personnel</th>
                                    <th>Type Personnel</th>
                                    <th>Type Habilitation</th>
                                    <th>Code</th>
                                    <th>Niveau</th>
                                    <th>Date Obtention</th>
                                    <th>Date Expiration</th>
                                    <th>Jours Restants</th>
                                    <th>Statut</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% habilitations.forEach(hab => { 
                                    let urgenceClass = '';
                                    if (hab.jours_restants !== null) {
                                        if (hab.jours_restants < 0) urgenceClass = 'table-danger';
                                        else if (hab.jours_restants < 30) urgenceClass = 'table-danger';
                                        else if (hab.jours_restants < 90) urgenceClass = 'table-warning';
                                    }
                                %>
                                <tr class="<%= urgenceClass %>" data-hab-id="<%= hab.id %>">
                                    <td>
                                        <strong><%= hab.personnel_nom %></strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary"><%= hab.type_personnel %></span>
                                    </td>
                                    <td><%= hab.type_habilitation %></td>
                                    <td>
                                        <%= hab.code_habilitation || '-' %>
                                    </td>
                                    <td>
                                        <% if (hab.niveau) { %>
                                        <span class="badge bg-info"><%= hab.niveau %></span>
                                        <% } else { %>
                                        <span class="text-muted">-</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <%= new Date(hab.date_obtention).toLocaleDateString('fr-FR') %>
                                    </td>
                                    <td>
                                        <% if (hab.date_expiration) { %>
                                            <%= new Date(hab.date_expiration).toLocaleDateString('fr-FR') %>
                                        <% } else { %>
                                            <span class="text-muted">Pas d'expiration</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (hab.jours_restants !== null) { %>
                                            <% if (hab.jours_restants < 0) { %>
                                                <span class="badge badge-expiration bg-danger">
                                                    <i class="bi bi-x-circle me-1"></i>EXPIRÉE
                                                </span>
                                            <% } else if (hab.jours_restants < 30) { %>
                                                <span class="badge badge-expiration bg-danger">
                                                    <i class="bi bi-exclamation-triangle me-1"></i><%= hab.jours_restants %> jours
                                                </span>
                                            <% } else if (hab.jours_restants < 90) { %>
                                                <span class="badge badge-expiration bg-warning">
                                                    <i class="bi bi-clock me-1"></i><%= hab.jours_restants %> jours
                                                </span>
                                            <% } else { %>
                                                <span class="badge badge-expiration bg-success">
                                                    <%= hab.jours_restants %> jours
                                                </span>
                                            <% } %>
                                        <% } else { %>
                                            <span class="text-muted">-</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% 
                                        let statutClass = 'secondary';
                                        if (hab.statut === 'Active') statutClass = 'success';
                                        else if (hab.statut === 'Expirée') statutClass = 'danger';
                                        %>
                                        <span class="badge bg-<%= statutClass %>">
                                            <%= hab.statut %>
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group action-buttons" role="group">
                                            <button class="btn btn-sm btn-info" 
                                                    onclick="viewDetails(<%= hab.id %>)"
                                                    title="Voir détails">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <a href="/rh/habilitations/edit/<%= hab.id %>" 
                                               class="btn btn-sm btn-warning"
                                               title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <% if (hab.jours_restants !== null && hab.jours_restants < 90) { %>
                                            <button class="btn btn-sm btn-success" 
                                                    onclick="renouveler(<%= hab.id %>)"
                                                    title="Renouveler">
                                                <i class="bi bi-arrow-repeat"></i>
                                            </button>
                                            <% } %>
                                            <button class="btn btn-sm btn-danger" 
                                                    onclick="supprimerHabilitation(<%= hab.id %>)"
                                                    title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Détails Habilitation -->
    <div class="modal fade" id="detailsModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-info-circle me-2"></i>
                        Détails de l'Habilitation
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="detailsContent">
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Chargement...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    
    <script>
        // Initialisation DataTable
        $(document).ready(function() {
            const table = $('#habilitationsTable').DataTable({
                order: [[7, 'asc']], // Tri par jours restants
                pageLength: 25,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json'
                },
                columnDefs: [
                    { orderable: false, targets: -1 } // Désactiver tri sur colonne Actions
                ]
            });

            // Recherche personnalisée
            $('#searchInput').on('keyup', function() {
                table.search(this.value).draw();
            });
        });

        // Voir détails d'une habilitation
        function viewDetails(id) {
            const modal = new bootstrap.Modal(document.getElementById('detailsModal'));
            modal.show();
            
            // Charger les détails via AJAX
            fetch(`/rh/habilitations/api/${id}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const hab = data.habilitation;
                        const content = `
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <h6 class="text-muted">Personnel</h6>
                                    <p class="mb-0"><strong>${hab.personnel_nom}</strong></p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted">Type Personnel</h6>
                                    <p class="mb-0">${hab.type_personnel}</p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted">Type Habilitation</h6>
                                    <p class="mb-0">${hab.type_habilitation}</p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted">Code</h6>
                                    <p class="mb-0">${hab.code_habilitation || 'N/A'}</p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted">Niveau</h6>
                                    <p class="mb-0">${hab.niveau || 'N/A'}</p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted">Date Obtention</h6>
                                    <p class="mb-0">${new Date(hab.date_obtention).toLocaleDateString('fr-FR')}</p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted">Date Expiration</h6>
                                    <p class="mb-0">${hab.date_expiration ? new Date(hab.date_expiration).toLocaleDateString('fr-FR') : 'Pas d\'expiration'}</p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted">Statut</h6>
                                    <p class="mb-0"><span class="badge bg-${hab.statut === 'Active' ? 'success' : 'danger'}">${hab.statut}</span></p>
                                </div>
                                ${hab.notes ? `
                                <div class="col-12">
                                    <h6 class="text-muted">Notes</h6>
                                    <p class="mb-0">${hab.notes}</p>
                                </div>
                                ` : ''}
                            </div>
                        `;
                        document.getElementById('detailsContent').innerHTML = content;
                    } else {
                        document.getElementById('detailsContent').innerHTML = `
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                Impossible de charger les détails
                            </div>
                        `;
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    document.getElementById('detailsContent').innerHTML = `
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Erreur lors du chargement
                        </div>
                    `;
                });
        }

        // Renouveler une habilitation
        function renouveler(id) {
            if(confirm('Voulez-vous renouveler cette habilitation?')) {
                window.location.href = '/rh/habilitations/add?renouveler=' + id;
            }
        }

        // Supprimer une habilitation
        function supprimerHabilitation(id) {
            if(confirm('Êtes-vous sûr de vouloir supprimer cette habilitation?\n\nCette action est irréversible.')) {
                fetch(`/rh/habilitations/${id}/delete`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if(data.success) {
                        // Recharger la page avec message de succès
                        window.location.href = '/rh/habilitations?success=Habilitation supprimée avec succès';
                    } else {
                        alert('Erreur lors de la suppression: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    alert('Erreur lors de la suppression');
                });
            }
        }

        // Auto-masquage des alertes après 5 secondes
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert:not(.alert-habilitations)');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
</body>
</html>