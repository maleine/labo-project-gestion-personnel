<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nouvelle Évaluation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --sidebar-width: 250px;
        }
        
        /* Layout avec sidebar fixe */
        .main-content {
            margin-left: var(--sidebar-width);
            padding: 30px;
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <%- include('../partials/sidebar', { currentPage: 'rh-dashboard' }) %>
    
    <div class="main-content">
        <div class="container-fluid px-4 py-4">
            <h2 class="mb-4">Nouvelle Évaluation du Personnel</h2>

            <form method="POST" action="/rh/evaluations/create">
                <div class="card mb-3">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0">Informations Générales</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Personnel Évalué <span class="text-danger">*</span></label>
                                <select class="form-select" name="personnel_id" required>
                                    <option value="">Sélectionner...</option>
                                    <% personnel.forEach(p => { %>
                                    <option value="<%= p.id %>">
                                        <%= p.prenom %> <%= p.nom %> (<%= p.type_personnel %>)
                                    </option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Évaluateur <span class="text-danger">*</span></label>
                                <select class="form-select" name="evaluateur_id" required>
                                    <option value="">Sélectionner...</option>
                                    <% personnel.filter(p => ['Biologiste', 'Cadre'].includes(p.type_personnel)).forEach(p => { %>
                                    <option value="<%= p.id %>">
                                        <%= p.prenom %> <%= p.nom %>
                                    </option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Type d'Évaluation <span class="text-danger">*</span></label>
                                <select class="form-select" name="type_evaluation" required>
                                    <option value="">Sélectionner...</option>
                                    <option value="Annuelle">Évaluation Annuelle</option>
                                    <option value="Période essai">Période d'Essai</option>
                                    <option value="Habilitation">Habilitation</option>
                                    <option value="Mi-parcours">Mi-parcours</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Début Période <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" name="periode_debut" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Fin Période <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" name="periode_fin" required>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Évaluation</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label class="form-label">Note Globale / 20</label>
                                <input type="number" step="0.1" min="0" max="20" class="form-control" name="note_globale">
                            </div>
                            <div class="col-md-12">
                                <label class="form-label">Points Forts</label>
                                <textarea class="form-control" name="points_forts" rows="3"></textarea>
                            </div>
                            <div class="col-md-12">
                                <label class="form-label">Points d'Amélioration</label>
                                <textarea class="form-control" name="points_amelioration" rows="3"></textarea>
                            </div>
                            <div class="col-md-12">
                                <label class="form-label">Objectifs</label>
                                <textarea class="form-control" name="objectifs" rows="3"></textarea>
                            </div>
                            <div class="col-md-12">
                                <label class="form-label">Commentaires Généraux</label>
                                <textarea class="form-control" name="commentaires" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i> Enregistrer
                    </button>
                    <a href="/rh/evaluations" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-2"></i> Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
