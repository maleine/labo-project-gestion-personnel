<!-- views/rh/competences/details.ejs -->
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Compétence: <%= competence.nom %> - Lab Manager</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    .niveau-badge {
      padding: 0.5em 1em;
      border-radius: 20px;
      font-weight: 500;
    }
  </style>
</head>
<body>
  <div class="d-flex">
    <%- include('../../partials/sidebar') %>
    
    <div class="main-content" style="margin-left: 260px; width: calc(100% - 260px);">
    
      
      <div class="container-fluid p-4">
        <!-- En-tête -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <div>
            <h2><i class="bi bi-star text-warning"></i> Détails de la Compétence</h2>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Accueil</a></li>
                <li class="breadcrumb-item"><a href="/rh/dashboard">RH</a></li>
                <li class="breadcrumb-item"><a href="/rh/competences">Compétences</a></li>
                <li class="breadcrumb-item active"><%= competence.nom %></li>
              </ol>
            </nav>
          </div>
          <div>
            <% if (canManage) { %>
            <a href="/rh/competences/<%= competence.id %>/edit" class="btn btn-primary">
              <i class="bi bi-pencil"></i> Modifier
            </a>
            <% } %>
            <a href="/rh/competences" class="btn btn-outline-secondary">
              <i class="bi bi-arrow-left"></i> Retour
            </a>
          </div>
        </div>

        <div class="row">
          <!-- Informations principales -->
          <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
              <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informations</h5>
              </div>
              <div class="card-body">
                <div class="mb-3">
                  <label class="text-muted small">Code</label>
                  <div class="h5"><span class="badge bg-secondary"><%= competence.code %></span></div>
                </div>

                <div class="mb-3">
                  <label class="text-muted small">Nom de la compétence</label>
                  <div class="h4 text-primary"><%= competence.nom %></div>
                </div>

                <div class="mb-3">
                  <label class="text-muted small">Catégorie</label>
                  <div><span class="badge bg-info"><%= competence.categorie %></span></div>
                </div>

                <% if (competence.description) { %>
                <div class="mb-3">
                  <label class="text-muted small">Description</label>
                  <p class="mb-0"><%= competence.description %></p>
                </div>
                <% } %>

                <hr>

                <div class="small text-muted">
                  <i class="bi bi-calendar"></i> Créée le: 
                  <%= new Date(competence.created_at).toLocaleDateString('fr-FR') %>
                </div>
              </div>
            </div>

            <!-- Actions rapides -->
            <% if (canManage) { %>
            <div class="card border-0 shadow-sm mb-4">
              <div class="card-header bg-light">
                <h6 class="mb-0"><i class="bi bi-lightning"></i> Actions rapides</h6>
              </div>
              <div class="card-body">
                <button class="btn btn-sm btn-outline-primary w-100 mb-2" 
                        data-bs-toggle="modal" 
                        data-bs-target="#affecterPersonnelModal">
                  <i class="bi bi-person-plus"></i> Affecter à un personnel
                </button>
                <button class="btn btn-sm btn-outline-info w-100" 
                        data-bs-toggle="modal" 
                        data-bs-target="#affecterPosteModal">
                  <i class="bi bi-briefcase"></i> Associer à un poste
                </button>
              </div>
            </div>
            <% } %>
          </div>

          <!-- Personnel ayant cette compétence -->
          <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
              <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                  <i class="bi bi-people"></i> 
                  Personnel Certifié (<%= personnels.length %>)
                </h5>
              </div>
              <div class="card-body">
                <% if (personnels.length > 0) { %>
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Matricule</th>
                        <th>Nom et Prénom</th>
                        <th>Niveau</th>
                        <th>Date Acquisition</th>
                        <th>Dernière Évaluation</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% personnels.forEach(p => { 
                        let niveauClass = 'secondary';
                        switch(p.niveau) {
                          case 'Expert': niveauClass = 'danger'; break;
                          case 'Confirmé': niveauClass = 'success'; break;
                          case 'Intermédiaire': niveauClass = 'warning'; break;
                          case 'Débutant': niveauClass = 'info'; break;
                        }
                      %>
                      <tr>
                        <td><strong><%= p.matricule %></strong></td>
                        <td>
                          <a href="/personnel/profile/<%= p.id %>" class="text-decoration-none">
                            <%= p.prenom %> <%= p.nom %>
                          </a>
                        </td>
                        <td>
                          <span class="badge bg-<%= niveauClass %> niveau-badge">
                            <%= p.niveau %>
                          </span>
                        </td>
                        <td>
                          <% if (p.date_acquisition) { %>
                          <small><%= new Date(p.date_acquisition).toLocaleDateString('fr-FR') %></small>
                          <% } else { %>
                          <span class="text-muted">-</span>
                          <% } %>
                        </td>
                        <td>
                          <% if (p.date_evaluation) { %>
                          <small><%= new Date(p.date_evaluation).toLocaleDateString('fr-FR') %></small>
                          <% } else { %>
                          <span class="text-muted">Non évalué</span>
                          <% } %>
                        </td>
                        <td>
                          <a href="/personnel/profile/<%= p.id %>" 
                             class="btn btn-sm btn-outline-primary"
                             title="Voir le profil">
                            <i class="bi bi-eye"></i>
                          </a>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>

                <!-- Statistiques par niveau -->
                <div class="row mt-4">
                  <% 
                  const niveaux = { 'Débutant': 0, 'Intermédiaire': 0, 'Confirmé': 0, 'Expert': 0 };
                  personnels.forEach(p => { if (niveaux.hasOwnProperty(p.niveau)) niveaux[p.niveau]++; });
                  %>
                  <div class="col-md-3">
                    <div class="text-center p-3 bg-info bg-opacity-10 rounded">
                      <h3 class="text-info mb-0"><%= niveaux['Débutant'] %></h3>
                      <small class="text-muted">Débutant</small>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="text-center p-3 bg-warning bg-opacity-10 rounded">
                      <h3 class="text-warning mb-0"><%= niveaux['Intermédiaire'] %></h3>
                      <small class="text-muted">Intermédiaire</small>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="text-center p-3 bg-success bg-opacity-10 rounded">
                      <h3 class="text-success mb-0"><%= niveaux['Confirmé'] %></h3>
                      <small class="text-muted">Confirmé</small>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="text-center p-3 bg-danger bg-opacity-10 rounded">
                      <h3 class="text-danger mb-0"><%= niveaux['Expert'] %></h3>
                      <small class="text-muted">Expert</small>
                    </div>
                  </div>
                </div>

                <% } else { %>
                <div class="text-center py-5">
                  <i class="bi bi-person-x display-1 text-muted"></i>
                  <h5 class="mt-3">Aucun personnel certifié</h5>
                  <p class="text-muted">Cette compétence n'a pas encore été affectée à un membre du personnel</p>
                  <% if (canManage) { %>
                  <button class="btn btn-primary" 
                          data-bs-toggle="modal" 
                          data-bs-target="#affecterPersonnelModal">
                    <i class="bi bi-person-plus"></i> Affecter à un personnel
                  </button>
                  <% } %>
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- Modal Affecter Personnel -->
  <% if (canManage) { %>
  <div class="modal fade" id="affecterPersonnelModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">
            <i class="bi bi-person-plus"></i> Affecter la compétence à un personnel
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <form id="affecterPersonnelForm">
          <div class="modal-body">
            <input type="hidden" name="competence_id" value="<%= competence.id %>">
            
            <div class="mb-3">
              <label class="form-label">Personnel <span class="text-danger">*</span></label>
              <select class="form-select" name="personnel_id" required>
                <option value="">-- Sélectionnez --</option>
                <!-- À remplir dynamiquement via AJAX -->
              </select>
            </div>

            <div class="mb-3">
              <label class="form-label">Niveau <span class="text-danger">*</span></label>
              <select class="form-select" name="niveau" required>
                <option value="Débutant">Débutant</option>
                <option value="Intermédiaire">Intermédiaire</option>
                <option value="Confirmé">Confirmé</option>
                <option value="Expert">Expert</option>
              </select>
            </div>

            <div class="mb-3">
              <label class="form-label">Date d'acquisition</label>
              <input type="date" class="form-control" name="date_acquisition">
            </div>

            <div class="mb-3">
              <label class="form-label">Notes</label>
              <textarea class="form-control" name="notes" rows="3"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
            <button type="submit" class="btn btn-primary">Affecter</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Soumission formulaire affectation
    document.getElementById('affecterPersonnelForm')?.addEventListener('submit', function(e) {
      e.preventDefault();
      const formData = new FormData(this);
      const data = Object.fromEntries(formData);

      fetch('/rh/competences/affecter-personnel', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert('Compétence affectée avec succès');
          location.reload();
        } else {
          alert('Erreur: ' + data.message);
        }
      });
    });
  </script>
</body>
</html>