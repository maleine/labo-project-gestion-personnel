<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Compétence: <%= competence.nom %> - Lab Manager</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    .niveau-badge {
      padding: 0.5em 1em;
      border-radius: 20px;
      font-weight: 500;
    }
  </style>
</head>
<body>
  <div class="d-flex">
    <%- include('../../partials/sidebar') %>
    
    <div class="main-content" style="margin-left: 260px; width: calc(100% - 260px);">
    
      
      <div class="container-fluid p-4">
        <!-- En-tête -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <div>
            <h2><i class="bi bi-star text-warning"></i> Détails de la Compétence</h2>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Accueil</a></li>
                <li class="breadcrumb-item"><a href="/rh/dashboard">RH</a></li>
                <li class="breadcrumb-item"><a href="/rh/competences">Compétences</a></li>
                <li class="breadcrumb-item active"><%= competence.nom %></li>
              </ol>
            </nav>
          </div>
          <div>
            <% if (canManage) { %>
            <a href="/rh/competences/<%= competence.id %>/edit" class="btn btn-primary">
              <i class="bi bi-pencil"></i> Modifier
            </a>
            <% } %>
            <a href="/rh/competences" class="btn btn-outline-secondary">
              <i class="bi bi-arrow-left"></i> Retour
            </a>
          </div>
        </div>

        <div class="row">
          <!-- Informations principales -->
          <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
              <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informations</h5>
              </div>
              <div class="card-body">
                <div class="mb-3">
                  <label class="text-muted small">Code</label>
                  <div class="h5"><span class="badge bg-secondary"><%= competence.code %></span></div>
                </div>

                <div class="mb-3">
                  <label class="text-muted small">Nom de la compétence</label>
                  <div class="h4 text-primary"><%= competence.nom %></div>
                </div>

                <div class="mb-3">
                  <label class="text-muted small">Catégorie</label>
                  <div><span class="badge bg-info"><%= competence.categorie %></span></div>
                </div>

                <% if (competence.description) { %>
                <div class="mb-3">
                  <label class="text-muted small">Description</label>
                  <p class="mb-0"><%= competence.description %></p>
                </div>
                <% } %>

                <hr>

                <div class="small text-muted">
                  <i class="bi bi-calendar"></i> Créée le: 
                  <%= new Date(competence.created_at).toLocaleDateString('fr-FR') %>
                </div>
              </div>
            </div>

            <!-- Actions rapides -->
            <% if (canManage) { %>
            <div class="card border-0 shadow-sm mb-4">
              <div class="card-header bg-light">
                <h6 class="mb-0"><i class="bi bi-lightning"></i> Actions rapides</h6>
              </div>
              <div class="card-body">
                <button class="btn btn-sm btn-outline-primary w-100 mb-2" 
                        data-bs-toggle="modal" 
                        data-bs-target="#affecterPersonnelModal">
                  <i class="bi bi-person-plus"></i> Affecter à un personnel
                </button>
                <button class="btn btn-sm btn-outline-info w-100" 
                        data-bs-toggle="modal" 
                        data-bs-target="#affecterPosteModal">
                  <i class="bi bi-briefcase"></i> Associer à un poste
                </button>
              </div>
            </div>
            <% } %>
          </div>

          <!-- Personnel ayant cette compétence -->
          <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
              <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                  <i class="bi bi-people"></i> 
                  Personnel Certifié (<%= personnels.length %>)
                </h5>
              </div>
              <div class="card-body">
                <% if (personnels.length > 0) { %>
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Matricule</th>
                        <th>Nom et Prénom</th>
                        <th>Niveau</th>
                        <th>Date Acquisition</th>
                        <th>Dernière Évaluation</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% personnels.forEach(p => { 
                        let niveauClass = 'secondary';
                        switch(p.niveau) {
                          case 'Expert': niveauClass = 'danger'; break;
                          case 'Confirmé': niveauClass = 'success'; break;
                          case 'Intermédiaire': niveauClass = 'warning'; break;
                          case 'Débutant': niveauClass = 'info'; break;
                        }
                      %>
                      <tr>
                        <td><strong><%= p.matricule %></strong></td>
                        <td>
                          <a href="/personnel/profile/<%= p.id %>" class="text-decoration-none">
                            <%= p.prenom %> <%= p.nom %>
                          </a>
                        </td>
                        <td>
                          <span class="badge bg-<%= niveauClass %> niveau-badge">
                            <%= p.niveau %>
                          </span>
                        </td>
                        <td>
                          <% if (p.date_acquisition) { %>
                          <small><%= new Date(p.date_acquisition).toLocaleDateString('fr-FR') %></small>
                          <% } else { %>
                          <span class="text-muted">-</span>
                          <% } %>
                        </td>
                        <td>
                          <% if (p.date_evaluation) { %>
                          <small><%= new Date(p.date_evaluation).toLocaleDateString('fr-FR') %></small>
                          <% } else { %>
                          <span class="text-muted">Non évalué</span>
                          <% } %>
                        </td>
                        <td>
                          <a href="/personnel/profile/<%= p.id %>" 
                             class="btn btn-sm btn-outline-primary"
                             title="Voir le profil">
                            <i class="bi bi-eye"></i>
                          </a>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>

                <!-- Statistiques par niveau -->
                <div class="row mt-4">
                  <% 
                  const niveaux = { 'Débutant': 0, 'Intermédiaire': 0, 'Confirmé': 0, 'Expert': 0 };
                  personnels.forEach(p => { if (niveaux.hasOwnProperty(p.niveau)) niveaux[p.niveau]++; });
                  %>
                  <div class="col-md-3">
                    <div class="text-center p-3 bg-info bg-opacity-10 rounded">
                      <h3 class="text-info mb-0"><%= niveaux['Débutant'] %></h3>
                      <small class="text-muted">Débutant</small>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="text-center p-3 bg-warning bg-opacity-10 rounded">
                      <h3 class="text-warning mb-0"><%= niveaux['Intermédiaire'] %></h3>
                      <small class="text-muted">Intermédiaire</small>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="text-center p-3 bg-success bg-opacity-10 rounded">
                      <h3 class="text-success mb-0"><%= niveaux['Confirmé'] %></h3>
                      <small class="text-muted">Confirmé</small>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="text-center p-3 bg-danger bg-opacity-10 rounded">
                      <h3 class="text-danger mb-0"><%= niveaux['Expert'] %></h3>
                      <small class="text-muted">Expert</small>
                    </div>
                  </div>
                </div>

                <% } else { %>
                <div class="text-center py-5">
                  <i class="bi bi-person-x display-1 text-muted"></i>
                  <h5 class="mt-3">Aucun personnel certifié</h5>
                  <p class="text-muted">Cette compétence n'a pas encore été affectée à un membre du personnel</p>
                  <% if (canManage) { %>
                  <button class="btn btn-primary" 
                          data-bs-toggle="modal" 
                          data-bs-target="#affecterPersonnelModal">
                    <i class="bi bi-person-plus"></i> Affecter à un personnel
                  </button>
                  <% } %>
                </div>
                <% } %>
              </div>
            </div>
          </div>
          <!-- Postes requérant cette compétence -->
<div class="col-lg-12 mt-4">
  <div class="card border-0 shadow-sm">
    <div class="card-header bg-warning text-dark">
      <h5 class="mb-0">
        <i class="bi bi-briefcase"></i> 
        Postes Associés (<%= postesAssocies.length %>)
      </h5>
    </div>
    <div class="card-body">
      <% if (postesAssocies.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Code</th>
              <th>Titre du Poste</th>
              <th>Département</th>
              <th>Niveau Requis</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% postesAssocies.forEach(poste => { 
              let niveauClass = 'secondary';
              switch(poste.niveau_requis) {
                case 'Expert': niveauClass = 'danger'; break;
                case 'Confirmé': niveauClass = 'success'; break;
                case 'Intermédiaire': niveauClass = 'warning'; break;
                case 'Débutant': niveauClass = 'info'; break;
              }
            %>
            <tr>
              <td><strong><%= poste.code %></strong></td>
              <td>
                <a href="/rh/postes/edit/<%= poste.id %>" class="text-decoration-none">
                  <%= poste.titre %>
                </a>
              </td>
              <td>
                <% if (poste.departement_nom) { %>
                  <span class="badge bg-secondary"><%= poste.departement_nom %></span>
                <% } else { %>
                  <span class="text-muted">-</span>
                <% } %>
              </td>
              <td>
                <span class="badge bg-<%= niveauClass %>">
                  <%= poste.niveau_requis %>
                </span>
              </td>
              <td>
                <a href="/rh/postes/edit/<%= poste.id %>" 
                   class="btn btn-sm btn-outline-primary"
                   title="Voir le poste">
                  <i class="bi bi-eye"></i>
                </a>
                <% if (canManage) { %>
                <button class="btn btn-sm btn-outline-danger"
                        onclick="dissocierPoste(<%= poste.id %>)"
                        title="Dissocier">
                  <i class="bi bi-x-lg"></i>
                </button>
                <% } %>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="text-center py-5">
        <i class="bi bi-briefcase-x display-1 text-muted"></i>
        <h5 class="mt-3">Aucun poste associé</h5>
        <p class="text-muted">Cette compétence n'est pas encore requise pour un poste</p>
        <% if (canManage) { %>
        <button class="btn btn-warning" 
                data-bs-toggle="modal" 
                data-bs-target="#affecterPosteModal">
          <i class="bi bi-briefcase"></i> Associer à un poste
        </button>
        <% } %>
      </div>
      <% } %>
    </div>
  </div>
</div>
        </div>

      </div>
    </div>
  </div>

<!-- Modal Affecter Personnel -->
<% if (canManage) { %>
<div class="modal fade" id="affecterPersonnelModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="bi bi-person-plus"></i> Affecter la compétence à un personnel
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form id="affecterPersonnelForm">
        <div class="modal-body">
          <input type="hidden" name="competence_id" value="<%= competence.id %>">
          
          <div class="mb-3">
            <label class="form-label">Personnel <span class="text-danger">*</span></label>
            <select class="form-select" name="personnel_id" required>
              <option value="">-- Sélectionnez un personnel --</option>
              <% if (typeof tousPersonnels !== 'undefined' && tousPersonnels.length > 0) { %>
                <% tousPersonnels.forEach(p => { %>
                  <option value="<%= p.id %>">
                    <%= p.matricule %> - <%= p.prenom %> <%= p.nom %> (<%= p.type_personnel %>)
                  </option>
                <% }) %>
              <% } %>
            </select>
            <small class="text-muted">
              <i class="bi bi-info-circle"></i> 
              <%= (typeof tousPersonnels !== 'undefined' ? tousPersonnels.length : 0) %> personnel(s) disponible(s)
            </small>
          </div>

          <div class="mb-3">
            <label class="form-label">Niveau <span class="text-danger">*</span></label>
            <select class="form-select" name="niveau" required>
              <option value="">-- Sélectionnez un niveau --</option>
              <option value="Débutant">Débutant</option>
              <option value="Intermédiaire">Intermédiaire</option>
              <option value="Confirmé">Confirmé</option>
              <option value="Expert">Expert</option>
            </select>
          </div>

          <div class="mb-3">
            <label class="form-label">Date d'acquisition</label>
            <input type="date" class="form-control" name="date_acquisition">
          </div>

          <div class="mb-3">
            <label class="form-label">Notes</label>
            <textarea class="form-control" name="notes" rows="3" 
                      placeholder="Commentaires sur l'acquisition de cette compétence..."></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-lg"></i> Affecter
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<% } %>

<!-- Modal Associer à un Poste -->
<% if (canManage) { %>
<div class="modal fade" id="affecterPosteModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="bi bi-briefcase"></i> Associer la compétence à un poste
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form id="affecterPosteForm">
        <div class="modal-body">
          <input type="hidden" name="competence_id" value="<%= competence.id %>">
          
          <div class="mb-3">
            <label class="form-label">Poste <span class="text-danger">*</span></label>
            <select class="form-select" name="poste_id" required id="selectPoste">
              <option value="">-- Sélectionnez un poste --</option>
              <% if (typeof tousPostes !== 'undefined' && tousPostes.length > 0) { %>
                <% tousPostes.forEach(poste => { %>
                  <option value="<%= poste.id %>" data-departement="<%= poste.departement_nom %>">
                    <%= poste.code %> - <%= poste.titre %> 
                    <% if (poste.departement_nom) { %>
                      (<%= poste.departement_nom %>)
                    <% } %>
                  </option>
                <% }) %>
              <% } %>
            </select>
            <small class="text-muted">
              <i class="bi bi-info-circle"></i> 
              <%= (typeof tousPostes !== 'undefined' ? tousPostes.length : 0) %> poste(s) disponible(s)
            </small>
          </div>

          <div class="mb-3">
            <label class="form-label">Niveau requis <span class="text-danger">*</span></label>
            <select class="form-select" name="niveau_requis" required>
              <option value="">-- Sélectionnez un niveau --</option>
              <option value="Débutant">Débutant</option>
              <option value="Intermédiaire">Intermédiaire</option>
              <option value="Confirmé">Confirmé</option>
              <option value="Expert">Expert</option>
            </select>
            <small class="text-muted">
              Niveau minimum requis pour occuper ce poste
            </small>
          </div>

          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" name="obligatoire" id="competenceObligatoire" value="1">
            <label class="form-check-label" for="competenceObligatoire">
              Compétence obligatoire pour ce poste
            </label>
          </div>

          <div class="alert alert-info">
            <i class="bi bi-lightbulb"></i>
            <strong>Info :</strong> Cette compétence sera requise pour le poste "<%= competence.nom %>".
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-lg"></i> Associer
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<% } %>
<script>
  // Soumission formulaire affectation personnel
  document.getElementById('affecterPersonnelForm')?.addEventListener('submit', function(e) {
    e.preventDefault();
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);

    if (!data.personnel_id || !data.niveau) {
      alert('Veuillez remplir tous les champs obligatoires');
      return;
    }

    const submitBtn = this.querySelector('button[type="submit"]');
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Affectation...';

    fetch('/rh/competences/affecter-personnel', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(data)
    })
    .then(res => res.json())
    .then(data => {
      if (data.success) {
        alert('Compétence affectée avec succès');
        location.reload();
      } else {
        alert('Erreur: ' + data.message);
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<i class="bi bi-check-lg"></i> Affecter';
      }
    })
    .catch(err => {
      console.error('Erreur:', err);
      alert('Erreur lors de l\'affectation');
      submitBtn.disabled = false;
      submitBtn.innerHTML = '<i class="bi bi-check-lg"></i> Affecter';
    });
  });

  // Soumission formulaire affectation poste
  document.getElementById('affecterPosteForm')?.addEventListener('submit', function(e) {
    e.preventDefault();
    const formData = new FormData(this);
    const data = {
      competence_id: formData.get('competence_id'),
      poste_id: formData.get('poste_id'),
      niveau_requis: formData.get('niveau_requis'),
      obligatoire: formData.get('obligatoire') === '1'
    };

    if (!data.poste_id || !data.niveau_requis) {
      alert('Veuillez remplir tous les champs obligatoires');
      return;
    }

    const submitBtn = this.querySelector('button[type="submit"]');
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Association...';

    fetch('/rh/competences/affecter-poste', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(data)
    })
    .then(res => res.json())
    .then(data => {
      if (data.success) {
        alert('Compétence associée au poste avec succès');
        location.reload();
      } else {
        alert('Erreur: ' + data.message);
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<i class="bi bi-check-lg"></i> Associer';
      }
    })
    .catch(err => {
      console.error('Erreur:', err);
      alert('Erreur lors de l\'association');
      submitBtn.disabled = false;
      submitBtn.innerHTML = '<i class="bi bi-check-lg"></i> Associer';
    });
  });

  // Fonction pour dissocier un poste
  function dissocierPoste(posteId) {
    if (!confirm('Voulez-vous vraiment dissocier cette compétence de ce poste ?')) {
      return;
    }

    fetch('/rh/competences/dissocier-poste', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        competence_id: <%= competence.id %>,
        poste_id: posteId
      })
    })
    .then(res => res.json())
    .then(data => {
      if (data.success) {
        alert('Compétence dissociée avec succès');
        location.reload();
      } else {
        alert('Erreur: ' + data.message);
      }
    })
    .catch(err => {
      console.error('Erreur:', err);
      alert('Erreur lors de la dissociation');
    });
  }
</script>
