<!-- ==================== views/rh/competences/form.ejs ==================== -->
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= competence ? 'Modifier' : 'Nouvelle' %> Compétence</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    :root {
      --sidebar-width: 250px;
    }
    .main-content {
      margin-left: var(--sidebar-width);
      padding: 30px;
      min-height: 100vh;
    }
    .category-badge {
      display: inline-block;
      padding: 0.5rem 1rem;
      margin: 0.25rem;
      border-radius: 0.5rem;
      cursor: pointer;
      transition: all 0.3s;
    }
    .category-badge:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .category-badge.selected {
      border: 2px solid #0d6efd;
      background-color: #e7f1ff !important;
    }
  </style>
</head>
<body>
  <%- include('../../partials/sidebar', { currentPage: 'competences' }) %>
  
  <div class="main-content">
    <div class="container-fluid px-4 py-4">
      <!-- En-tête -->
      <div class="mb-4">
        <h2><i class="bi bi-star-fill text-warning"></i> <%= competence ? 'Modifier' : 'Nouvelle' %> Compétence</h2>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Accueil</a></li>
            <li class="breadcrumb-item"><a href="/rh/dashboard">RH</a></li>
            <li class="breadcrumb-item"><a href="/rh/competences">Compétences</a></li>
            <li class="breadcrumb-item active"><%= competence ? 'Modifier' : 'Nouvelle' %></li>
          </ol>
        </nav>
      </div>

      <!-- Formulaire -->
      <form method="POST" action="/rh/competences/<%= competence ? competence.id + '/edit' : 'nouveau' %>" id="competenceForm">
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informations de la Compétence</h5>
          </div>
          <div class="card-body">
            <div class="row g-3">
              <!-- Code -->
              <div class="col-md-4">
                <label class="form-label">Code <span class="text-danger">*</span></label>
                <input type="text" class="form-control" name="code" 
                       value="<%= competence ? competence.code : '' %>" 
                       placeholder="Ex: COMP-BIO-001" required>
                <small class="text-muted">Format recommandé: COMP-XXX-NNN</small>
              </div>

              <!-- Nom -->
              <div class="col-md-8">
                <label class="form-label">Nom de la Compétence <span class="text-danger">*</span></label>
                <input type="text" class="form-control" name="nom" 
                       value="<%= competence ? competence.nom : '' %>" 
                       placeholder="Ex: Analyse Biochimique" required>
              </div>

              <!-- Catégorie -->
              <div class="col-md-12">
                <label class="form-label d-block">Catégorie <span class="text-danger">*</span></label>
                <input type="hidden" name="categorie" id="categorieInput" 
                       value="<%= competence ? competence.categorie : '' %>" required>
                
                <div class="mb-3">
                  <div class="d-flex flex-wrap">
                    <% 
                    const categoriesPredefinies = [
                      { nom: 'Technique Laboratoire', couleur: '#3498db' },
                      { nom: 'Analyse', couleur: '#9b59b6' },
                      { nom: 'Qualité', couleur: '#e74c3c' },
                      { nom: 'Informatique', couleur: '#1abc9c' },
                      { nom: 'Management', couleur: '#f39c12' },
                      { nom: 'Communication', couleur: '#34495e' }
                    ];
                    
                    categoriesPredefinies.forEach(cat => { 
                    %>
                      <div class="category-badge" 
                           data-category="<%= cat.nom %>"
                           style="background-color: <%= cat.couleur %>20; border: 2px solid <%= cat.couleur %>;"
                           onclick="selectCategory('<%= cat.nom %>')">
                        <%= cat.nom %>
                      </div>
                    <% }) %>
                  </div>
                </div>

                <div class="input-group">
                  <input type="text" class="form-control" id="nouvelleCategorie" 
                         placeholder="Ou créer une nouvelle catégorie...">
                  <button type="button" class="btn btn-outline-primary" onclick="addNewCategory()">
                    <i class="bi bi-plus-circle"></i> Ajouter
                  </button>
                </div>

                <div id="categorieSelectionnee" class="mt-2">
                  <% if (competence && competence.categorie) { %>
                  <span class="badge bg-primary fs-6">
                    Catégorie sélectionnée: <%= competence.categorie %>
                  </span>
                  <% } %>
                </div>
              </div>

              <!-- Description -->
              <div class="col-md-12">
                <label class="form-label">Description</label>
                <textarea class="form-control" name="description" rows="4" 
                          placeholder="Décrivez cette compétence, son contexte d'utilisation, les prérequis..."><%= competence ? competence.description || '' : '' %></textarea>
              </div>
            </div>
          </div>
        </div>

        <!-- Exemples d'application (optionnel) -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-lightbulb"></i> Exemples & Notes (Optionnel)</h5>
          </div>
          <div class="card-body">
            <div class="alert alert-info mb-3">
              <i class="bi bi-info-circle"></i> 
              Ajoutez des exemples concrets d'application ou des notes pour aider à l'évaluation de cette compétence.
            </div>
            
            <textarea class="form-control" rows="3" 
                      placeholder="Ex: Cette compétence est requise pour effectuer des analyses de routine en biochimie..."></textarea>
          </div>
        </div>

        <!-- Boutons d'action -->
        <div class="d-flex gap-2">
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Enregistrer
          </button>
          <a href="/rh/competences" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Annuler
          </a>
        </div>
      </form>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Sélection de catégorie
    function selectCategory(category) {
      // Retirer la sélection précédente
      document.querySelectorAll('.category-badge').forEach(badge => {
        badge.classList.remove('selected');
      });

      // Sélectionner la nouvelle
      event.target.classList.add('selected');
      
      // Mettre à jour le champ caché
      document.getElementById('categorieInput').value = category;
      
      // Afficher la sélection
      document.getElementById('categorieSelectionnee').innerHTML = `
        <span class="badge bg-primary fs-6">
          Catégorie sélectionnée: ${category}
        </span>
      `;
    }

    // Ajouter nouvelle catégorie
    function addNewCategory() {
      const input = document.getElementById('nouvelleCategorie');
      const category = input.value.trim();
      
      if (!category) {
        alert('Veuillez entrer un nom de catégorie');
        return;
      }

      // Mettre à jour le champ caché
      document.getElementById('categorieInput').value = category;
      
      // Afficher la sélection
      document.getElementById('categorieSelectionnee').innerHTML = `
        <span class="badge bg-success fs-6">
          Nouvelle catégorie: ${category}
        </span>
      `;

      // Vider le champ
      input.value = '';
    }

    // Pré-sélectionner la catégorie si modification
    <% if (competence && competence.categorie) { %>
    document.addEventListener('DOMContentLoaded', function() {
      const badges = document.querySelectorAll('.category-badge');
      badges.forEach(badge => {
        if (badge.dataset.category === '<%= competence.categorie %>') {
          badge.classList.add('selected');
        }
      });
    });
    <% } %>

    // Validation du formulaire
    document.getElementById('competenceForm').addEventListener('submit', function(e) {
      const category = document.getElementById('categorieInput').value;
      if (!category) {
        e.preventDefault();
        alert('Veuillez sélectionner ou créer une catégorie');
      }
    });
  </script>
</body>
</html>