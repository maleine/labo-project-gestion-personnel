<!-- ==================== views/presence/synchronisation.ejs ==================== -->
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Synchronisation Pointeuses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        :root {
            --sidebar-width: 250px;
        }
        
        /* Layout avec sidebar fixe */
        .main-content {
            margin-left: var(--sidebar-width);
            padding: 30px;
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <%- include('../partials/sidebar') %>
    
    <div class="main-content">
        <div class="container-fluid px-4 py-4">
            <h2 class="mb-4"><i class="bi bi-arrow-repeat"></i> Synchronisation Pointeuses</h2>

            <!-- Liste Appareils -->
            <div class="row g-4 mb-4">
                <% appareils.forEach(app => { %>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="bi bi-fingerprint"></i> <%= app.nom %>
                                </h5>
                                <span class="badge bg-<%= app.statut === 'Actif' ? 'success' : 'secondary' %>">
                                    <%= app.statut %>
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Modèle:</strong> <%= app.modele %></p>
                                    <p class="mb-2"><strong>IP:</strong> <%= app.adresse_ip %>:<%= app.port %></p>
                                    <p class="mb-2"><strong>Emplacement:</strong> <%= app.emplacement || 'N/A' %></p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-2">
                                        <strong>Dernière synchro:</strong><br>
                                        <% if (app.derniere_synchro) { %>
                                            <%= new Date(app.derniere_synchro).toLocaleString('fr-FR') %>
                                        <% } else { %>
                                            <span class="text-muted">Jamais</span>
                                        <% } %>
                                    </p>
                                </div>
                            </div>
                            <hr>
                            <button class="btn btn-primary w-100" onclick="syncAppareil(<%= app.id %>, '<%= app.nom %>')">
                                <i class="bi bi-arrow-repeat me-2"></i> Synchroniser Maintenant
                            </button>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>

            <!-- Logs Synchronisation -->
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Historique Synchronisations</h5>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-sm">
                        <thead>
                            <tr>
                                <th>Date/Heure</th>
                                <th>Appareil</th>
                                <th>Pointages Importés</th>
                                <th>Erreurs</th>
                                <th>Durée</th>
                                <th>Statut</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% logs.forEach(log => { 
                                const appareil = appareils.find(a => a.id === log.appareil_id);
                            %>
                            <tr>
                                <td><%= new Date(log.date_synchro).toLocaleString('fr-FR') %></td>
                                <td><%= appareil ? appareil.nom : 'N/A' %></td>
                                <td><span class="badge bg-info"><%= log.nb_pointages_importes %></span></td>
                                <td>
                                    <% if (log.nb_erreurs > 0) { %>
                                        <span class="badge bg-danger"><%= log.nb_erreurs %></span>
                                    <% } else { %>
                                        <span class="text-muted">0</span>
                                    <% } %>
                                </td>
                                <td><%= log.duree_ms %>ms</td>
                                <td>
                                    <span class="badge bg-<%= 
                                        log.statut === 'Succès' ? 'success' : 
                                        log.statut === 'Partiel' ? 'warning' : 'danger' 
                                    %>">
                                        <%= log.statut %>
                                    </span>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function syncAppareil(id, nom) {
            if(!confirm(`Synchroniser l'appareil "${nom}"?`)) return;
            
            const btn = event.target;
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Synchronisation...';
            
            fetch(`/presence/synchronisation/lancer/${id}`, { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    if(data.success) {
                        alert(`✓ Synchronisation réussie!\n\n` +
                              `Pointages importés: ${data.nb_importes}\n` +
                              `Erreurs: ${data.nb_erreurs}\n` +
                              `Durée: ${data.duree_ms}ms`);
                        location.reload();
                    } else {
                        alert('✗ Erreur lors de la synchronisation');
                        btn.disabled = false;
                        btn.innerHTML = '<i class="bi bi-arrow-repeat me-2"></i> Synchroniser Maintenant';
                    }
                })
                .catch(error => {
                    alert('✗ Erreur: ' + error.message);
                    btn.disabled = false;
                    btn.innerHTML = '<i class="bi bi-arrow-repeat me-2"></i> Synchroniser Maintenant';
                });
        }
    </script>
</body>
</html>