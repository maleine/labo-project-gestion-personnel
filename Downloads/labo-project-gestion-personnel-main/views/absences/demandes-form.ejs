<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= demande ? 'Modifier' : 'Nouvelle' %> Demande d'Absence</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    :root {
      --sidebar-width: 250px;
    }
    
    .main-content {
      margin-left: var(--sidebar-width);
      padding: 30px;
      min-height: 100vh;
      background-color: #f8f9fa;
    }
    
    .form-card {
      border-radius: 15px;
      box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }
    
    .form-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 2rem;
      border-radius: 15px 15px 0 0;
    }
    
    .type-absence-card {
      border: 2px solid #e0e0e0;
      border-radius: 10px;
      padding: 1rem;
      cursor: pointer;
      transition: all 0.3s;
      margin-bottom: 1rem;
    }
    
    .type-absence-card:hover {
      border-color: #667eea;
      box-shadow: 0 2px 8px rgba(102, 126, 234, 0.2);
    }
    
    .type-absence-card.selected {
      border-color: #667eea;
      background-color: #f0f4ff;
      box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
    }
    
    .type-absence-card input[type="radio"] {
      display: none;
    }
    
    .categorie-badge {
      font-size: 0.75rem;
      padding: 0.25rem 0.5rem;
    }
    
    .solde-info {
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
      color: white;
      border-radius: 10px;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
    }
    
    .calcul-jours {
      background: #e8f5e9;
      border-left: 4px solid #4caf50;
      padding: 1rem;
      border-radius: 5px;
    }
  </style>
</head>
<body>
 <%- include('../partials/sidebar', { currentPage: 'rh-dashboard' }) %>
  
  <div class="main-content">
    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <!-- En-tête -->
          <div class="mb-4">
            <a href="/absences/demandes" class="btn btn-outline-secondary mb-3">
              <i class="bi bi-arrow-left"></i> Retour aux demandes
            </a>
          </div>

          <!-- Formulaire -->
          <div class="card form-card">
            <div class="form-header">
              <h3 class="mb-0">
                <i class="bi bi-calendar-plus"></i> 
                <%= demande ? 'Modifier la demande d\'absence' : 'Nouvelle demande d\'absence' %>
              </h3>
              <p class="mb-0 mt-2">Remplissez les informations ci-dessous pour <%= demande ? 'modifier' : 'créer' %> une demande</p>
            </div>
            
            <div class="card-body p-4">
              <form action="<%= demande ? '/absences/demandes/' + demande.id + '/update' : '/absences/demandes/create' %>" 
                    method="POST" 
                    id="demandeForm">
                
                <!-- Section 1: Personnel -->
                <div class="mb-4">
                  <h5 class="border-bottom pb-2 mb-3">
                    <i class="bi bi-person-circle"></i> Informations du Personnel
                  </h5>
                  
                  <div class="row">
                    <div class="col-md-6">
                      <div class="mb-3">
                        <label for="personnel_id" class="form-label">
                          Personnel concerné <span class="text-danger">*</span>
                        </label>
                        <select class="form-select" id="personnel_id" name="personnel_id" required onchange="loadSoldeConges()">
                          <option value="">Sélectionnez un personnel...</option>
                          <% personnel.forEach(p => { %>
                          <option value="<%= p.id %>" 
                                  data-type="<%= p.type_personnel %>"
                                  <%= demande && demande.personnel_id === p.id ? 'selected' : '' %>>
                            <%= p.prenom %> <%= p.nom %> - <%= p.type_personnel %>
                          </option>
                          <% }); %>
                        </select>
                      </div>
                    </div>
                    
                    <div class="col-md-6">
                      <div class="mb-3">
                        <label for="demandeur_id" class="form-label">
                          Demandeur
                        </label>
                        <select class="form-select" id="demandeur_id" name="demandeur_id">
                          <option value="">Même personne que le personnel</option>
                          <% personnel.forEach(p => { %>
                          <option value="<%= p.id %>"
                                  <%= demande && demande.demandeur_id === p.id ? 'selected' : '' %>>
                            <%= p.prenom %> <%= p.nom %>
                          </option>
                          <% }); %>
                        </select>
                        <small class="text-muted">Laissez vide si la demande est faite par le personnel lui-même</small>
                      </div>
                    </div>
                  </div>

                  <!-- Solde disponible -->
                  <div id="soldeInfo" style="display: none;">
                    <div class="solde-info">
                      <div class="row">
                        <div class="col-md-4 text-center">
                          <h6 class="mb-1">Solde Restant</h6>
                          <h3 id="soldeRestant">-</h3>
                          <small>jours disponibles</small>
                        </div>
                        <div class="col-md-4 text-center border-start border-end">
                          <h6 class="mb-1">Congés Pris</h6>
                          <h3 id="congesPris">-</h3>
                          <small>jours utilisés</small>
                        </div>
                        <div class="col-md-4 text-center">
                          <h6 class="mb-1">Total Acquis</h6>
                          <h3 id="totalAcquis">-</h3>
                          <small>jours annuels</small>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Section 2: Type d'absence -->
                <div class="mb-4">
                  <h5 class="border-bottom pb-2 mb-3">
                    <i class="bi bi-tag"></i> Type d'Absence
                  </h5>
                  
                  <div class="row" id="typesAbsencesContainer">
                    <% 
                    const categories = [...new Set(typesAbsences.map(t => t.categorie))];
                    categories.forEach(categorie => { 
                    %>
                    <div class="col-md-12 mb-3">
                      <h6 class="text-muted mb-2"><%= categorie %></h6>
                      <div class="row">
                        <% typesAbsences.filter(t => t.categorie === categorie).forEach(type => { %>
                        <div class="col-md-6">
                          <label class="type-absence-card <%= demande && demande.type_absence_id === type.id ? 'selected' : '' %>">
                            <input type="radio" 
                                   name="type_absence_id" 
                                   value="<%= type.id %>"
                                   data-categorie="<%= type.categorie %>"
                                   <%= demande && demande.type_absence_id === type.id ? 'checked' : '' %>
                                   required>
                            <div class="d-flex justify-content-between align-items-start">
                              <div>
                                <strong><%= type.libelle %></strong>
                                <% if (type.nb_jours_max) { %>
                                <br><small class="text-muted">Max: <%= type.nb_jours_max %> jours</small>
                                <% } %>
                              </div>
                              <span class="badge categorie-badge" style="background-color: <%= type.couleur || '#6c757d' %>">
                                <%= type.categorie %>
                              </span>
                            </div>
                          </label>
                        </div>
                        <% }); %>
                      </div>
                    </div>
                    <% }); %>
                  </div>
                </div>

                <!-- Section 3: Période -->
                <div class="mb-4">
                  <h5 class="border-bottom pb-2 mb-3">
                    <i class="bi bi-calendar-range"></i> Période d'Absence
                  </h5>
                  
                  <div class="row">
                    <div class="col-md-4">
                      <div class="mb-3">
                        <label for="date_debut" class="form-label">
                          Date de début <span class="text-danger">*</span>
                        </label>
                        <input type="date" 
                               class="form-control" 
                               id="date_debut" 
                               name="date_debut"
                               value="<%= demande ? new Date(demande.date_debut).toISOString().split('T')[0] : '' %>"
                               required
                               onchange="calculerNbJours()">
                      </div>
                    </div>
                    
                    <div class="col-md-4">
                      <div class="mb-3">
                        <label for="date_fin" class="form-label">
                          Date de fin <span class="text-danger">*</span>
                        </label>
                        <input type="date" 
                               class="form-control" 
                               id="date_fin" 
                               name="date_fin"
                               value="<%= demande ? new Date(demande.date_fin).toISOString().split('T')[0] : '' %>"
                               required
                               onchange="calculerNbJours()">
                      </div>
                    </div>
                    
                    <div class="col-md-4">
                      <div class="mb-3">
                        <label for="nb_jours" class="form-label">
                          Nombre de jours <span class="text-danger">*</span>
                        </label>
                        <input type="number" 
                               class="form-control" 
                               id="nb_jours" 
                               name="nb_jours"
                               step="0.5"
                               min="0.5"
                               value="<%= demande ? demande.nb_jours : '' %>"
                               required
                               readonly>
                        <small class="text-muted">Calculé automatiquement</small>
                      </div>
                    </div>
                  </div>

                  <!-- Calcul automatique -->
                  <div class="calcul-jours" id="calculInfo" style="display: none;">
                    <div class="d-flex align-items-center">
                      <i class="bi bi-calculator fs-4 me-3"></i>
                      <div>
                        <strong>Calcul automatique</strong>
                        <p class="mb-0" id="calculDetail">-</p>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Section 4: Motif -->
                <div class="mb-4">
                  <h5 class="border-bottom pb-2 mb-3">
                    <i class="bi bi-chat-left-text"></i> Motif et Commentaires
                  </h5>
                  
                  <div class="mb-3">
                    <label for="motif" class="form-label">Motif de l'absence</label>
                    <textarea class="form-control" 
                              id="motif" 
                              name="motif" 
                              rows="4"
                              placeholder="Décrivez le motif de cette demande d'absence..."><%= demande ? demande.motif || '' : '' %></textarea>
                    <small class="text-muted">Ce champ est optionnel mais recommandé pour faciliter la validation</small>
                  </div>
                </div>

                <!-- Boutons d'action -->
                <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                  <a href="/absences/demandes" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Annuler
                  </a>
                  <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-circle"></i> 
                    <%= demande ? 'Modifier la demande' : 'Créer la demande' %>
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Gestion de la sélection des types d'absence
    document.querySelectorAll('.type-absence-card').forEach(card => {
      card.addEventListener('click', function() {
        document.querySelectorAll('.type-absence-card').forEach(c => c.classList.remove('selected'));
        this.classList.add('selected');
        this.querySelector('input[type="radio"]').checked = true;
      });
    });

    // Charger le solde de congés
    async function loadSoldeConges() {
      const personnelId = document.getElementById('personnel_id').value;
      if (!personnelId) {
        document.getElementById('soldeInfo').style.display = 'none';
        return;
      }

      try {
        const response = await fetch(`/api/personnel/${personnelId}/solde-conges`);
        if (response.ok) {
          const data = await response.json();
          document.getElementById('soldeRestant').textContent = (data.solde_restant || 0).toFixed(1);
          document.getElementById('congesPris').textContent = (data.conges_pris || 0).toFixed(1);
          document.getElementById('totalAcquis').textContent = (data.total_acquis || 0).toFixed(1);
          document.getElementById('soldeInfo').style.display = 'block';
        }
      } catch (error) {
        console.error('Erreur chargement solde:', error);
      }
    }

    // Calculer le nombre de jours
    function calculerNbJours() {
      const dateDebut = document.getElementById('date_debut').value;
      const dateFin = document.getElementById('date_fin').value;
      
      if (!dateDebut || !dateFin) return;

      const debut = new Date(dateDebut);
      const fin = new Date(dateFin);
      
      if (fin < debut) {
        alert('La date de fin doit être après la date de début');
        document.getElementById('date_fin').value = '';
        return;
      }

      // Calculer les jours ouvrés (hors week-ends)
      let nbJours = 0;
      let current = new Date(debut);
      
      while (current <= fin) {
        const dayOfWeek = current.getDay();
        if (dayOfWeek !== 0 && dayOfWeek !== 6) { // Pas dimanche (0) ni samedi (6)
          nbJours++;
        }
        current.setDate(current.getDate() + 1);
      }

      document.getElementById('nb_jours').value = nbJours;
      
      // Afficher le détail du calcul
      const calculInfo = document.getElementById('calculInfo');
      const calculDetail = document.getElementById('calculDetail');
      calculDetail.textContent = `Période du ${debut.toLocaleDateString('fr-FR')} au ${fin.toLocaleDateString('fr-FR')} = ${nbJours} jour(s) ouvré(s)`;
      calculInfo.style.display = 'block';
    }

    // Initialiser si on est en mode édition
    <% if (demande) { %>
    loadSoldeConges();
    calculerNbJours();
    <% } %>

    // Validation du formulaire
    document.getElementById('demandeForm').addEventListener('submit', function(e) {
      const nbJours = parseFloat(document.getElementById('nb_jours').value);
      const soldeRestant = parseFloat(document.getElementById('soldeRestant').textContent);
      
      if (nbJours > soldeRestant) {
        const typeAbsence = document.querySelector('input[name="type_absence_id"]:checked');
        const categorie = typeAbsence ? typeAbsence.dataset.categorie : '';
        
        if (categorie === 'Congés payés') {
          if (!confirm(`Attention: Cette demande dépasse le solde disponible (${soldeRestant} jours). Voulez-vous continuer ?`)) {
            e.preventDefault();
          }
        }
      }
    });
  </script>
</body>
</html>