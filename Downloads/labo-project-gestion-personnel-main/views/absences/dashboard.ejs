<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Absences & Planning</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
<style>
        :root {
            --sidebar-width: 250px;
        }
        
        /* Layout avec sidebar fixe */
        .main-content {
            margin-left: var(--sidebar-width);
            padding: 30px;
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <%- include('../partials/sidebar', { currentPage: 'rh-dashboard' }) %>
    
    <div class="main-content">
        <div class="container-fluid px-4 py-4">
            <h2 class="mb-4"><i class="bi bi-calendar-check"></i> Dashboard Absences & Planning</h2>

            <!-- Stats -->
            <div class="row g-4 mb-4">
                <div class="col-md-3">
                    <div class="card text-center border-warning">
                        <div class="card-body">
                            <i class="bi bi-clock-history fs-1 text-warning"></i>
                            <h3 class="mt-2"><%= stats.demandes_attente %></h3>
                            <p class="text-muted mb-0">Demandes en Attente</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center border-primary">
                        <div class="card-body">
                            <i class="bi bi-calendar-x fs-1 text-primary"></i>
                            <h3 class="mt-2"><%= stats.absences_mois %></h3>
                            <p class="text-muted mb-0">Absences ce Mois</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center border-dark">
                        <div class="card-body">
                            <i class="bi bi-moon-stars fs-1 text-dark"></i>
                            <h3 class="mt-2"><%= stats.personnel_garde %></h3>
                            <p class="text-muted mb-0">Personnel Garde</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center border-success">
                        <div class="card-body">
                            <i class="bi bi-bookmark-check fs-1 text-success"></i>
                            <h3 class="mt-2"><%= stats.solde_moyen ? stats.solde_moyen.toFixed(1) : 0 %></h3>
                            <p class="text-muted mb-0">Solde Moyen (jours)</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions Rapides -->
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Gestion des Absences</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="/absences/calendrier" class="btn btn-outline-primary">
                                    <i class="bi bi-calendar-event me-2"></i> Calendrier
                                </a>
                                <a href="/absences/demandes" class="btn btn-outline-primary">
                                    <i class="bi bi-file-earmark-text me-2"></i> Demandes
                                </a>
                                <a href="/absences/demandes/add" class="btn btn-primary">
                                    <i class="bi bi-plus-circle me-2"></i> Nouvelle Demande
                                </a>
                                <a href="/absences/soldes" class="btn btn-outline-success">
                                    <i class="bi bi-bookmark me-2"></i> Soldes Congés
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">Planning & Gardes</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="/absences/garde-nuit" class="btn btn-dark">
                                    <i class="bi bi-moon-stars me-2"></i> Garde de Nuit
                                </a>
                                <a href="/absences/plannings" class="btn btn-outline-dark">
                                    <i class="bi bi-calendar3 me-2"></i> Tous les Plannings
                                </a>
                                <a href="/absences/plannings/add" class="btn btn-outline-dark">
                                    <i class="bi bi-calendar-plus me-2"></i> Nouveau Planning
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-warning">
                        <div class="card-header bg-warning">
                            <h5 class="mb-0">⚠️ Alertes</h5>
                        </div>
                        <div class="card-body">
                            <% if (stats.demandes_attente > 0) { %>
                            <div class="alert alert-warning mb-2">
                                <strong><%= stats.demandes_attente %></strong> demandes à valider
                            </div>
                            <% } %>
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> Planning garde de nuit à venir
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>