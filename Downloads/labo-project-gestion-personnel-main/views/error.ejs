<!-- ==================== views/error.ejs ==================== -->
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Erreur' %> - Lab Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .error-container {
            text-align: center;
            padding: 3rem;
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            max-width: 600px;
        }
        .error-icon {
            font-size: 8rem;
            color: #dc3545;
            margin-bottom: 1rem;
        }
        .error-code {
            font-size: 4rem;
            font-weight: bold;
            color: #667eea;
            margin-bottom: 0.5rem;
        }
        .error-message {
            font-size: 1.5rem;
            color: #666;
            margin-bottom: 2rem;
        }
        .error-details {
            background: #f8f9fa;
            padding: 1rem;
            border-radius: 10px;
            margin: 1.5rem 0;
            text-align: left;
            font-family: monospace;
            font-size: 0.9rem;
            color: #dc3545;
            max-height: 300px;
            overflow-y: auto;
        }
        .btn-home {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 12px 40px;
            font-size: 1.1rem;
            border-radius: 30px;
            transition: transform 0.3s;
        }
        .btn-home:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body>
    <div class="error-container">
        <i class="bi bi-exclamation-triangle-fill error-icon"></i>
        
        <% if (error && error.status) { %>
            <div class="error-code"><%= error.status %></div>
        <% } %>
        
        <h1 class="error-message"><%= title || 'Une erreur est survenue' %></h1>
        
        <p class="text-muted">
            <%= message || 'Nous sommes désolés, une erreur inattendue s\'est produite.' %>
        </p>
        
        <% if (error && error.stack && process.env.NODE_ENV === 'development') { %>
            <div class="error-details">
                <strong>Détails de l'erreur (mode développement) :</strong><br>
                <%= error.stack %>
            </div>
        <% } %>
        
        <div class="mt-4">
            <a href="/" class="btn btn-home">
                <i class="bi bi-house-door me-2"></i>
                Retour au tableau de bord
            </a>
        </div>
        
        <div class="mt-3">
            <button onclick="window.history.back()" class="btn btn-link text-muted">
                <i class="bi bi-arrow-left me-1"></i>
                Retour à la page précédente
            </button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>